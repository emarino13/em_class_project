<h2>Beastie Boys Discography</h2>

<span class="image">
  <%= image_tag "BeastieBoys.jpg", :class => 'boys' %>
  </span>

<form action= <%= find_by_year_path %> method="get">
  <h4>Search Beastie Boys albums by year:</h4>
  <input type="text" name="album_year"/>

  <input type="submit" name="submit" value="Search"/>
</form>

<% if params[:album_year].present? then %>
  <% @albums.each do |album|%>
    <p><b>In <%= @album_year%>, the album released was "<%= album.name %>."</b></p>
  <% end %>
<% end %>

<% if @albums.empty? and params[:album_year].present? then %>
  <p> There are no albums for that year.</p>
<% end %>

<h4>Or...</h4>

<form action= <%= find_by_name_path %> method="get">
  <h4>Search album name to find out the year released:</h4>
  <input type="text" name="album_name"/>
  <input type="submit" name="submit" value="Search"/>
</form>

<% if params[:album_name].present? then %>
  <% @albums.each do |album| %>
  <p><b> The album "<%= @album_name %>", was released in <%= album.year %>.</b></p>
  <% end %>
  <% end %>

